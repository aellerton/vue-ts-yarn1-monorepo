{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "."
  },
  "baseUrl": ".",
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@foolib/*": [
      "libs/foolib/dist"
    ]
  }
}
