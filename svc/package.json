  },
  "dependencies": {
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/chai-http": "^4.2.0",
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@types/mocha": "^8.2.2",
    "@types/sinon-chai": "^3.2.8",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "cross-env": "^7.0.3",
    "sinon-chai": "^3.7.0",
    "ts-loader": "=9.1.1",
    "ts-node": "=9.1.1",
    "ts-node-dev": "=1.1.8",
    "ts-sinon": "^2.0.2",
    "tsconfig-paths": "^3.12.0",
    "typescript": "=4.6.2",
    "webpack": "=5.8.0",
    "webpack-cli": "=4.7.0",
    "webpack-node-externals": "=2.5.2"
  },
  "mocha": {
    "require": [
